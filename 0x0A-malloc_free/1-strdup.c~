#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>

/**
 *
 *
 *
 */
int str_len(char *str)
{
	int i = 0;

	while (str != '\0')
	{
		i++;
	}
	return (i);
}

/**
 * _strdup -
 * @str:
 * Return:
 */
char *_strdup(char *str)
{
	char *c;
	int size;
	int i;

	size = str_len(str);
	c = malloc((size + 1) * sizeof(char));

	if (c == NULL)
	{
		return (NULL);
	}

	i = 0;
	while(i < size)
	{
		c[i] = str[i];
		i++;
	}
	return (c);
}
