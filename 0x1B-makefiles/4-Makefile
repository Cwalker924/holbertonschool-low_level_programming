CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:%.c=%.o)
NAME=holberton
RM=rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main: $(SRC)
	$(CC)   -c -o $(OBJ) $(SRC)

holberton: $(SRC)
	$(CC)   -c -o $(OBJ) $(SRC)

clean:
	$(RM) *~
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ $(NAME) $(OBJ)

re:
	$(CC) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)
